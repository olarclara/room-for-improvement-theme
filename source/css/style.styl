@import "_variables"

body
  margin: 0
  min-height: 100vh
  display: flex
  flex-direction: column
  align-items: center
  position: relative
  color: darken($color-text, 5%)
  background: $color-background
  font-family: $font-family  

ul
  list-style: none
  margin: 0
  padding: 0

a, a:visited
  color: $color-link  

.content
  width: 60%
  section
    margin-bottom: 5%

@media screen and (max-width: 40em)
  .content
    width: 90%  

@import "_partial/header"
@import "_partial/index"
@import "_partial/post"
@import "_partial/footer"

