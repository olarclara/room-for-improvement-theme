<section id="about">
  <% if (config.description) { %>
    <p><%- config.description %></p>
  <% } %>
  <p style="display: inline">
    <% if (theme.customize.social_links) { %>
      Find me on
      <ul>
        <% for(var i in theme.customize.social_links) { %>
          <li><a target="_blank" href="<%- url_for(theme.customize.social_links[i]) %>"><%- i %></a></li>
        <% } %>
      </ul>.
    <% } %>
  </p>
</section>
<section id="posts">
  <h1>Posts</h1>
  <ul>
    <% page.posts.each(function(post){ %>
      <li>
        <h4>
          <a href="<%- url_for(post.path) %>"><%= post.title %></a>
          (<%= date(post.date, config.date_format) %>)
        </h4>
      </li>
    <% }) %>
  </ul>
</section>
<% if (theme.projects) { %>
  <section id="projects">
    <h1>Projects</h1>
    <ul>
      <% for(var i in theme.projects) { %>
        <li style="display: inline">
          <h4>
            <a target="_blank" href="<%- url_for(theme.projects[i].url) %>"><%- i %></a>
            (<%- theme.projects[i].description %>)
          </h4>
        </li>
      <% } %>
    </ul>
  </section>
<% } %>